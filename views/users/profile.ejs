<%- include('../partials/header') %>

<div class="container my-5">
    <div class="card">
        <div class="d-flex justify-content-between align-items-start">
            <div class="mt-1 ml-2">
                <h3><%= user.name %></h3>
                <div class="d-flex justify-content-start align-items-end">
                    <h5>YOUR WATCHLIST</h5>
                    <% if(user.watchList.length != 0){ %>
                        <a style="font-size: 1.5em;" href="/User/Profile/<%= currentUser._id %>/editWatchList">
                            <i class="ml-3 fa fa-pencil"></i>
                        </a>
                    <% } %>
                </div>
                <ol>
                    <% user.watchList.forEach(movie => { %>
                        <li><a href="/movies/<%= movie._id %>"><%= movie.name %></a></li>
                    <% }) %>
                </ol>
                <div>
                    <div class="d-flex justify-content-start align-items-end">
                        <h5>YOUR REVIEWS</h5>
                        <% if(ratings.length != 0){ %>
                            <a style="font-size: 1.5em;" href="#">
                                <i class="ml-3 fa fa-pencil"></i>
                            </a>
                        <% } %>
                    </div>
                    <ol>
                        <% ratings.forEach((rating)=>{ %>
                            <li><%= rating.movie %> - <%= rating.rating %></li>
                        <% }); %>
                    </ol>
                </div>
            </div>
            <div id="imgProfile">
                <img src="" alt="PROFILE PIC">
            </div>
        </div>
    </div>
</div>

<%- include("../partials/footer") %>