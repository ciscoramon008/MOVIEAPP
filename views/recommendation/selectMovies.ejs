<%- include("../partials/header") %>
<div class="container mt-3">
    <h2>Select 2 Movies to Find More Like Them</h2>
    <div class="d-flex justify-content-between align-items-start my-3">
        <div>
            <form action="/recommendation/selectMovies" method="POST">
                <% movies.forEach((movie) => { %>
                    <div class="d-flex align-items-start">
                        <div>
                            <input type="checkbox" name="movie" value="<%= movie.name %>">
                        </div>
                        <div class="ml-3"><h3><%= movie.name %></h3></div>
                    </div>
                <% }) %>
                <button class="mt-3 btn btn-success btn-lg">Submit</button>
            </form>
        </div>
        <div>
            <a class="btn btn-lg btn-primary" href="/recommendation/selectMovies">Generate Random Movies</a>
        </div>
    </div>
</div>


<%- include("../partials/footer") %>