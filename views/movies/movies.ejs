<%- include("../partials/header") %>
<div class="container">
    <div class="jumbotron text-center" style="margin: 30px 0;">
        <h1 class="text-center">VIEW MOVIES ALONG WITH RATINGS</h1>
        <a class="btn btn-primary" href="/movies/new">Add movies</a>
        <a class="btn btn-primary" href="/actors">Actors</a>
    </div>
    <div class="row">
        <% movies.forEach(function(movie){ %>
            <div class="col-lg-3 my-3 justify-content-between">
                <div class="card">
                    <div class="card-title text-center pt-2 mb-0">
                        <h4><%= movie.name.toUpperCase() %></h4>
                    </div>
                    <div class="card-img-top">
                        <img style="width: 100%; height: 375px; " src="<%= movie.poster %>">
                    </div>
                    <div>
                        <h3 class="ml-1"><%= movie.ratingValue %></h3>
                    </div>
                    <a href="/movies/<%= movie._id %>" class="btn btn-block btn-md btn-info">MOREEEEE!</a>
                </div>
            </div>
        <% }); %>
    </div>
</div>

<%- include("../partials/footer") %>