<%- include("../partials/header") %>
<div class="container">
    <div class="jumbotron text-center" style="margin: 30px 0;">
        <h1 class="text-center">VIEW MOVIES ALONG WITH RATINGS</h1>
        <a class="btn btn-primary" href="/movies/new">Add movies</a>
        <a class="btn btn-primary" href="/actors/new">Add actors</a>
        <a class="btn btn-primary" href="/actors">All actors</a>
    </div>
    <div class="row">
        <% movies.forEach(function(movie){ %>
            <div class="col-lg-4 my-3 justify-content-between">
                <div class="card">
                    <div class="card-title text-center pt-2 mb-0">
                        <h3><%= movie.name.toUpperCase() %></h3>
                    </div>
                    <div class="card-img-top">
                        <img style="width: 100%; height: 500px; " src="<%= movie.poster %>">
                    </div>
                    <form action="/movies/<%= movie._id %>/rating" method="POST">
                        <input type="number" max="10" min="0" name="rating" placeholder="rating" required>
                        <button class="btn btn-primary btn-block">Rate it</button>
                    </form>
                    <div>
                        <h3><%= movie.ratingValue %></h3>
                    </div>
                    <a href="/movies/<%= movie._id %>" class="btn btn-block btn-lg btn-info">MOREEEEE!</a>
                </div>
            </div>
        <% }); %>
    </div>
</div>

<%- include("../partials/footer") %>