<%- include("../partials/header") %>

<div class="container my-5">
    <div class="row">
        <div class="col col-md-3">
            <div class="list-group">
                <a class="list-group-item list-group-item-action active" href="/movies/<%= movie._id %>">ABOUT</a>
                <a class="list-group-item list-group-item-action" href="/movies/<%= movie._id %>/reviews">REVIEWS</a>
                <a class="list-group-item list-group-item-action" href="#">FULL-PLOT</a>
                <a class="list-group-item list-group-item-action" href="#">CAST</a>
                <a class="list-group-item list-group-item-action" href="#">BOX OFFICE</a>
                <a class="list-group-item list-group-item-action" href="#">WHERE TO WATCH</a>
            </div>
        </div>
        <div class="col col-md-9 card p-3">
            <h1 class="display-4"><%= movie.name.toUpperCase() %></h1>
            <img class="img-fluid" src="<%= movie.image %>"><hr>
            <h4><strong>Added By: <%= movie.addedBy.username %></strong></h4>
            <p><%= movie.plot %></p><hr>
            <form action="/movies/<%= movie._id %>?_method=DELETE" method="POST">
                <button class="btn btn-primary btn-block">Delete Movie</button>
            </form>
        </div>
    </div>
</div>

<%- include("../partials/footer") %>