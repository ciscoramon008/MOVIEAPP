<%- include("../partials/header") %>
<div class="container my-5">
    <div class="d-flex align-items-start justify-content-between">
        <div>
            <h1 class="display-4"><%= actor.name %></h1>
            <div class="lead mr-5 text-justify"><%= actor.bio %></div><hr>
            <div class="d-flex justify-content-between align-items-start">
                <div>
                    <h2>Movies:</h2> 
                    <% actor.movies.forEach((movie)=>{ %>
                        <li><a href="/movies/<%= movie._id %>"><%= movie.name %></a></li>
                    <% }); %>
                </div>
                <div class="mr-5">
                    <h2>Upcoming Movies:</h2> 
                    <% actor.upcomingMovies.forEach((movie)=>{ %>
                        <li><a href="/movies/<%= movie._id %>"><%= movie.name %></a></li>
                    <% }); %>
                </div>
            </div>
        </div>
        <div>
            <img src="<%= actor.image %>" style="width: 300px; height: 100%;">
            <h4>Born: <%= actor.dob.toDateString() %></h4>
            <% if(currentUser && currentUser.isAdmin){ %>
                <div class="d-flex justify-content-between">
                    <form id="deleteActor" action="/actors/<%= actor._id %>?_method=DELETE" method="POST">
                        <button class="btn btn-danger">Delete Actor</button>
                    </form>
                    <a class="ml-2 btn btn-warning" href="/actors/<%= actor._id %>/edit">Edit Actor Details</a>
                </div>
            <% } %>
        </div>
    </div>
</div>

<%- include("../partials/footer") %>