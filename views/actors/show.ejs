<%- include("../partials/header") %>
<div class="container my-5">
    <div class="d-flex align-items-start justify-content-between">
        <div>
            <h1 class="display-4"><%= actor.name %></h1>
            <div class="lead mr-5 text-justify"><%= actor.bio %></div><hr>
            <h1>Movies:</h1> 
            <% actor.movies.forEach((movie)=>{ %>
                <li><a href="/movies/<%= movie._id %>"><%= movie.name %></a></li>
            <% }); %>
        </div>
        <div>
            <img src="<%= actor.image %>" style="width: 300px; height: 100%;">
            <h4>Born: <%= actor.dob.toDateString() %></h4>
            <form action="/actors/<%= actor._id %>?_method=DELETE" method="POST">
                <button class="btn btn-danger">Delete Actor</button>
            </form>
        </div>
    </div>
</div>

<%- include("../partials/footer") %>