<%- include("../partials/header") %>
<div class="container my-5">
    <h1>Edit Actor - <%= actor.name %></h1>
    <div class="row my-4">
        <div class="col-md-3">
            <img class="img-thumbnail" src="<%= actor.image %>">
        </div>
        <div class="col-md-9">
            <form action="/actors/<%= actor._id %>?_method=PUT" method="POST">
                <div class="form-group">
                    <label for="name">Actor Name:</label>
                    <input id="name" type="text" name="name" class="form-control" value="<%= actor.name %>">
                </div>
                <div class="form-group">
                    <label for="img">Actor Image:</label>
                    <input id="img" type="text" name="image" class="form-control" value="<%= actor.image %>">
                </div>
                <div class="form-group">
                    <label for="bio">Actor Bio:</label>
                    <textarea class="form-control" name="bio" id="bio" rows="3"><%= actor.bio %></textarea>
                </div>
                <button type="submit" class="btn btn-primary btn-block">Submit</button>
            </form>
        </div>
    </div>
</div>

<%- include("../partials/footer") %>