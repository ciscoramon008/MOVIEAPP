<%- include("../partials/header") %>
<div class="container my-5">
    <h1>ADD ACTORS TO DATABASE</h1>
    <form action="/actors" method="POST" class="my-5 px-5">
        <div class="form-group">
            <label for="name">Actor Name:</label>
            <input id="name" type="text" name="name" class="form-control" placeholder="Actor Name">
        </div>
        <div class="form-group">
            <label for="img">Actor Image:</label>
            <input id="img" type="text" name="image" class="form-control" placeholder="Actor Image">
        </div>
        <div class="form-group">
            <label for="dob">Date Of Birth:</label>
            <input id="dob" type="date" name="dob" class="form-control" placeholder="Date Of Birth">
        </div>
        <div class="form-group">
            <label> Actor Bio: <br> <textarea name="bio" placeholder=Actor Bio" cols="138" rows="4"></textarea>
            </label>
        </div>
        <button type="submit" class="btn btn-primary btn-block">Submit</button>
    </form>
</div>

<%- include("../partials/footer") %>